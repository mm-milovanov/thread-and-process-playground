{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "debug-native",
        "type": "cppdbg",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${command:cmake.launchTargetPath}",
        "stopAtEntry": false,
        "cwd": "${workspaceRoot}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
      }
    ]
}